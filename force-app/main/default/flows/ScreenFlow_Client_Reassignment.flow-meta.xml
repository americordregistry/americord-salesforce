            <assignToReference>varRecCollContToUpdate</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Loop_Over_Contacts</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Loop_Over_Contacts</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>Adds the invoice to the update collection.</description>
        <name>Add_Inv_to_the_Update_Collection</name>
