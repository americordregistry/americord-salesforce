            <assignToReference>varRecCollInvToUpdate</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Loop_Over_Invoices</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Loop_Over_Invoices</targetReference>
        </connector>
    </assignments>
    <assignments>
