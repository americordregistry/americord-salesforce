    <assignments>
        <description>update the current contact ownerid</description>
        <name>Update_Ownerid_on_Contact</name>
        <label>Update Ownerid on Contact</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>Loop_Over_Contacts.OwnerId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>AccountOwner.recordId</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Add_Contact_to_Update_Collection</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>updates the invoice owner</description>
        <name>Update_Ownerid_on_Invoice</name>
        <label>Update Ownerid on Invoice</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>Loop_Over_Invoices.OwnerId</assignToReference>
