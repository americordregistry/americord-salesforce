        <locationX>50</locationX>
        <locationY>503</locationY>
        <inputAssignments>
            <field>Ecomm_Status__c</field>
            <value>
                <stringValue>Enrolled</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
