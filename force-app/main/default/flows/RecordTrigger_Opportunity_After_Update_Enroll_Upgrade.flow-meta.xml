    <formulas>
        <description>Formula that will hold the date/time for today.</description>
        <name>formDTTimeToday</name>
        <dataType>DateTime</dataType>
        <expression>DATETIMEVALUE(Today())</expression>
    </formulas>
    <formulas>
        <description>Formula that will hold the datetime for tomorrow.</description>
        <name>formDTTimeTomorrow</name>
        <dataType>DateTime</dataType>
        <expression>DATETIMEVALUE(Today()+1)</expression>
    </formulas>
    <formulas>
        <description>Formula that will hold today&apos;s date.</description>
        <name>formDTToday</name>
        <dataType>Date</dataType>
        <expression>TODAY()</expression>
    </formulas>
    <formulas>
        <description>This formula will hold the value for the slack message that will be sent on enrollment.</description>
        <name>formTSlackMessageForEnrolledOpp</name>
        <dataType>String</dataType>
        <expression>&quot;An Opportunity has just &quot;+{!varTOppStageName}+&quot;.&quot;+BR()+&quot;CLIENT/OPP: &quot;+{!$Record.Name}+BR()+&quot;SALESPERSON: &quot;+{!Get_Enroller.Name}+BR()+&quot;=================&quot;+BR()+&quot;ENROLLMENTS TODAY: &quot;+TEXT({!varIntNumberOfEnrollments})+BR()+&quot;UPGRADES TODAY: &quot;+TEXT({!varNumUpgrades})+BR()+&quot;TOTAL AMOUNT: $&quot;+TEXT({!varCurrTotal})</expression>
    </formulas>
