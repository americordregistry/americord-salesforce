    <description>This is the main flow that should be used for the Portal Authentication automation after insert or update.</description>
    <environments>Default</environments>
    <formulas>
        <description>This is a formula for the reset date on the password reset.</description>
        <name>formDTResetDate</name>
        <dataType>Date</dataType>
        <expression>TODAY() + 7</expression>
    </formulas>
    <formulas>
        <description>Formula that will create the password reset token.</description>
        <name>formTPasswordResetToken</name>
        <dataType>String</dataType>
        <expression>&quot;6&quot;+Right({!$Record.First_Name__c},1)+&quot;3&quot;+Right({!$Record.First_Name__c} ,1)+&quot;794&quot;+Right({!$Record.Last_Name__c} ,1)+&quot;-3a&quot;+Right({!$Record.Last_Name__c} ,1)+&quot;9-473&quot;+Right({!$Record.Last_Name__c} ,1)+&quot;-8&quot;+Right({!$Record.Last_Name__c} ,1)+Text(Month(Today()))+&quot;-65bb61&quot;+Right({!$Record.First_Name__c} ,1)+&quot;9&quot;+LEFT(TEXT(NOW()), 2)+LEFT(RIGHT(TEXT(NOW()), 3),2)</expression>
    </formulas>
